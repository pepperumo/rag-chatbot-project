    email {$LETSENCRYPT_EMAIL}
}

# Agent API reverse proxy
{$AGENT_API_HOSTNAME} {
    # Request body size limit (10MB)
    request_body {
        max_size 10MB
    }
    
    reverse_proxy agent-api:8001
}

# Frontend reverse proxy
{$FRONTEND_HOSTNAME} {
    # Request body size limit (10MB)
    request_body {
        max_size 10MB
    }
    
    reverse_proxy frontend:8080
}